<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorText">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inicioStringTxtvEnterate"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/inicioTxtvEnterate"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryText"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inicioTxtvEnterate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/iniciocovid"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/inicioImgbtnBanner1"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:padding="10dp"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inicioImgbtnBanner1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/iniciodistancia"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/inicioImgbtnBanner2"
            android:background="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/inicioImgbtnBanner2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/inicioImgbtnFolleto2"
            android:src="@drawable/inicionigromante"
            android:id="@+id/inicioImgbtnFolleto1"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:background="@color/colorPrimary"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/inicioImgbtnBanner2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/inicioImgbtnFolleto1"
            android:src="@drawable/iniciomatematicas"
            android:id="@+id/inicioImgbtnFolleto2"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:background="@color/colorPrimary"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
